//1. Write a program to check if a number is even or odd.
#include <iostream>
using namespace std;
void checkprime(int n){
    if (n == 1)
        cout<<"The given number is prime number"<<endl;
    if (n%2==0)
        cout<<"The given number is not a prime number"<<endl;
    else 
        cout<<"The given number is prime number"<<endl;
}
int main(){
    int n;
    cout<<"Enter any number:";
    cin>>n; 
    checkprime(n);
    return 0; 
}

